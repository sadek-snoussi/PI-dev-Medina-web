                                                <a data-target="#supprimer{{ stand.numstand }}" data-toggle="modal" data-original-title="Supprimer"> <i class="fa fa-close text-danger"></i> </a>
                                            </td>
                                        </tr>


                                        {#*********************************************************************************************************************#}

                                        <div class="modal fade in" id="supprimer{{ stand.numstand }}"  >
