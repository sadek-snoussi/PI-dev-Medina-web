{% extends ':admin:base_admin.html.twig' %}



{% block content %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row page-titles">

        </div>



        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header bg-info">
                    <h4 class="m-b-0 text-white">Modifier Evenement</h4>
                </div>
                <div class="card-body">
                    <form method="post" class="form-horizontal">
                        <div class="form-body">

                            <hr class="m-t-0 m-b-40">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label text-right col-md-3">Nom Evenement</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" placeholder="Nom Evenement" name="nomevent" value="{{ event.nomevent }}">
                                        </div>
                                    </div>
                                </div>

                                <!--/span-->

                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label text-right col-md-3"> Lieux</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" placeholder="lieux" name="lieux" value="{{ event.lieux }}"">
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>



                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Nombre max stand</label>
                                    <div class="col-md-9">
                                        <input type="number" class="form-control" name="nbreplace" value="{{ event.nbreplace }}">
                                    </div>
                                </div>
                            </div>


                        </div>





                        <!--/row-->

                </div>
                <hr>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" class="btn btn-success" value="Modifier"/>
                                    <input type="button" class="btn btn-inverse" value="Annuler"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6"> </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}