                        <td  align="center" style="font-family: Arial">{{ stand.emplacementstand }}</td></tr>
                    <tr><td style="font-family: Arial">Prix:</td>
                    <td  align="center" style="font-family: Arial">{{ stand.prix }}DT</td></tr>

                    <tr> <td style="font-family: Arial">Date de reservation   :  </td>
                        <td  align="center"  style="font-family: Arial" >{{ "now"|date("m/d/Y") }} </td></tr>


                    <input type="text" name="utilisateur" value="{{ app.user.id }}" hidden>
                    </br>


                </form>





<tr> <td align="center"> N'oubliez pas d'apporter ce reçu  lorsque vous prendrez votre Stand </td>
    <td align="right">
        <a class="btn btn-default fa fa-file-pdf-o"  href="{{ path('Generer_Pdf2',{'ide':event.idevent,'ids':stand.numstand })  }}"  > Imprimer</a>
        </td>
</tr>


            </table>
