{% extends "client/layout.html.twig" %}
     {% block flexslider %}


     {% endblock %}

{% block content %}
<center>




            <table  border="0">



                <form method="post">

                  <tr ><h1 align="center"  > Reçu </h1></tr>
                    <tr>

                        <td style="font-family: Arial"><h2>{{ event.nomevent }}</h2></td>
                        <td align="right"><img  alt="alt"  src="{{ asset('uploads/img/' ~ event.urlafficheevent ) }}" height="120px" ></td>
                    </tr>


                    <tr><td   style="font-family: Arial" size="5"> {{ app.user.nomuser }}</td>
                        <td align="center" style="font-family: Arial"> {{ app.user.prenomuser }}</td>

                    </tr>
                    <tr>
                        <td style="font-family: Arial">Numero Stand:</td>
                        <td  align="center" style="font-family: Arial">{{  stand.numstand }}</h3></td> </tr>
                    <br/>
