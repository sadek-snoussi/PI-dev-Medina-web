{% extends ':client:layout.html.twig' %}
{% block flexslider %}
{% endblock flexslider %}

    {% block content %}
        <head>
            <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
            <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
            <title> Ajouter Video </title>
            <center>

                <div class="container">
                    <div class="page-header">
                        <h3> Importer Video </h3>
                    </div>
                </div>
            </center>

        </head>
        <body>
        <div class="container">
            <div class="row" >
                <div class="col-md-4 col-md-offset-4 center">
                    {{ form_start(form , {'attr':{novalidate: 'novalidate'}}) }}
                    <div class="form-group">
                        <label for="Prenom">
                            <span class="req"></span> Titre : </label>
                        {{ form_widget(form.titre, {'attr':{'class':'form-control','required' : 'true'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>
                    <div class="form-group">
                        <label for="Prenom">
                            <span class="req"></span> Description : </label>
                        {{ form_widget(form.descriptionVideo, {'attr':{'class':'form-control','required' : 'true'}}) }}
                        {{ form_errors(form.descriptionVideo) }}
                    </div>
                    <div class="form-group">
                        <label for="Prenom">
                            <span class="req"></span> Tags : </label>
                        {{ form_widget(form.tags, {'attr':{'class':'form-control','required' : 'true','placeholder':'%tag1%tag2%tag3%'}}) }}
                        {{ form_errors(form.tags) }}
                    </div>


                    <div  class=" form-group ">
                        <div class="btn btn-default" style="width: 100%">
                            {{ form_widget(form.video, {'attr':{'class':'image-preview-input-title','required' : 'true'}}) }}
                        </div>

                    </div>
                    <div class="form-group">
                        {{ form_widget(form.Ajouter, {'attr':{'class':'btn_c','value' : 'Modifier'}}) }}

                    </div>
                    {{ form_row(form.video) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        </body>
{#{{ form.Ajouter.attr.class }}#}
    {% endblock content %}
