{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="container">
    <div class="row" >
        <div class="col-md-4 col-md-offset-4 center">
            <fieldset>
                <legend class="text-center" style="font-size: x-large">Modifier Profil</legend>
                <legend class="text-center" style="color: red; font-size: smaller">Veuillez saisir des informations valide pour modifier votre profil</legend>
                <div class="form-group">
                    <label for="Nom"><span class="req">* </span> Nom : </label>
                    {{ form_widget(form.nomuser,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.nomuser) }}
                </div>
                <div class="form-group">
                    <label for="Prenom"><span class="req">* </span> Prenom : </label>
                    {{ form_widget(form.prenomuser,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.prenomuser) }}
                </div>
                <div class="form-group">
                    <label for="Email"><span class="req">* </span> Email : </label>
                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>


                <div class="form-group">
                    <label for="Username"><span class="req">* </span>  Nom d'utilisateur : </label>
                    {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="form-group">
                    <label for="teluser"><span class="req">* </span>  Numero : </label>
                    {{ form_widget(form.teluser,{'attr':{'class':'form-control'}}) }}

                </div>

                <div class="form-group">
                    <label for="date"><span class="req">* </span>  Date de  naissance : </label>
                    {{ form_widget(form.datenaissuser,{'attr':{'class': ''}}) }}
                </div>

                <div class="form-group">
                    <label for="date"><span class="req">* </span>  mot de passe actuel: </label>
                    {{ form_widget(form.current_password,{'attr':{'class': ''}}) }}
                </div>



                <div class="form-group">
                    <input class="btn_c" type="submit" name="submit_reg" value="Modifier">
                </div>




            </fieldset>
        </div></div></div>

