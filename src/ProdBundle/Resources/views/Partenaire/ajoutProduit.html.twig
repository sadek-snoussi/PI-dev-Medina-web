                <div class="btn btn-default" style="width: 100%">
                {{ form_widget(form.urlimgproduit, {'attr': {'class': 'image-preview-input-title','required' : 'true'}}) }}

                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-warning','value' : 'Ajouter'}}) }}
