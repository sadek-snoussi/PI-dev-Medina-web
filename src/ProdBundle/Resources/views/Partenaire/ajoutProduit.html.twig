    <div class="form-group">
        {{ form_widget(form.referenceProd, {'attr': {'class': 'form-control','required' : 'true','placeholder' : 'Reference Produit'}}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.idcategorie, {'attr': {'class': 'form-control','required' : 'true'}}) }}
