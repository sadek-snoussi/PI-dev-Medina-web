    <div class="container">

        <div class="col-md-4 col-md-offset-4">

{{ form_start(form) }}

    <div class="form-group">
        {{ form_widget(form.nomproduit, {'attr': {'class': 'form-control','required' : 'true','placeholder' : 'Nom Produit'}}) }}
