{% extends "admin/base_admin.html.twig"%}

{% block content %}

    <br>
    <br>
    <br>
    <br>
    <br>





    <center>



        <div class="container">
<div class="col-md-8 col-md-offset-6">

    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            <a data-dismiss="alert" class="class pull-right"><i class="fa fa-remove"></i></a>

            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}

            <div class="span7">
                <div class="widget stacked widget-table action-table">

                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>Catégories.</h3>
                    </div>



                    <div class="widget-content">

                        <table class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>Reference Categorie</th>
                                <th>Nom Categorie</th>
                                <th class="td-actions"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categorie in categories %}

                                <tr>
                                <td>{{ categorie.typecategorie }}</td>
                                <td>{{ categorie.nomcategorie }}</td>
                                <td class="td-actions">
                                    <a class='btn btn-info btn-xs' href="{{ path('UpDateCategorie',{'id': categorie.idcategorie}   ) }}"><span class="fa fa-edit"></span> Edit</a>

                                    <button data-toggle="modal" data-target="#product_view{{ categorie.idcategorie }}" class="btn btn-danger btn-xs">
                                        <span class="fa fa-remove"></span> Supp</button>
                                </td>
                            </tr>


                            {#****************************************************************************************************************#}



                            <div class="modal fade product_view" id="product_view{{ categorie.idcategorie }}">
                                <div class="modal-dialog">
                                    <div class="modal-content">


                                        <div class="modal-header">

                                            <h3 class="modal-title">êtes-vous sûr?</h3>
                                        </div>

                                        <div class="modal-body">


                                            <h4>Vous êtes en train de supprimer la catégorie {{ categorie.nomcategorie }}.</h4>
                                            <h4>Voulez-vous continuer ?</h4>
                                            <br>

                                            <div class="row">

                                                <a href="{{ path('supp_Categorie',{'id': categorie.idcategorie}) }}" class="btn btn-default">Oui</a>
                                                <a data-dismiss="modal" class="btn btn-default">Annuler</a>

                                            </div>
                                        </div>

                                        <div class="modal-footer">


                                        </div>








                                    </div>
                                </div>
                            </div>



                            {% endfor %}


                            <tr>
                                <td>

                                </td>
                                <td>

                                </td>
                                <td>
                                    <a href="{{ path('AjoutCategorie')}}" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-plus"></span> Ajouter Categorie</a>

                                </td>


                            </tr>



                        </table>


                    </div>

        </div>
        </div>
</div>
        </div>
    </center>

{% endblock content %}










