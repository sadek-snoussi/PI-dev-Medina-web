{% extends 'admin/base_admin.html.twig' %}

{% block content %}
    {{ form_start(form) }}

    <div class="container">
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row page-titles">
                    <div class="col-md-6 align-self-center">

                        <div class="card-header bg-info" style="font-size: x-large" align="center">
                            <h4 class="m-b-0 text-white">Ajouter un Bon plan</h4>
                        </div>
                        </br>

                        <div class="form-group">
                            <label for="Nom"><span class="req">* </span> Titre : </label>
                            {{ form_widget(form.nombonplan,{'attr':{'class':'form-control' ,'required':'true' }}) }}
                            {{ form_errors(form.nombonplan) }}
                        </div>

                        <div class="form-group">
                            <label for="Adresse"><span class="req">* </span> Adresse : </label>
                            {{ form_widget(form.adressebonplan,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.adressebonplan) }}
                        </div>

                        <div class="form-group">
                            <label for="Type"><span class="req">* </span> Type : </label>
                            {{ form_widget(form.typebonplan,{'attr':{'class':'form-control' ,'required':'true' }}) }}
                            {{ form_errors(form.typebonplan) }}
                        </div>



                        <div class="form-group">
                            <label for="Note"><span class="req">* </span> Latitude : </label>
                            {{ form_widget(form.latitude ,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.latitude) }}
                        </div>

                        <div class="form-group">
                            <label for="Note"><span class="req">* </span> Longitude : </label>

                            {{ form_widget(form.longitude ,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.longitude) }}
                        </div>

                        <div class="form-group">
                            <label for="Image"><span class="req">* </span> Image : </label>
                            {{ form_widget(form.imgBonplan,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.imgBonplan) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.Ajouter,{'attr':{'class':'btn btn-outline-success'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{ form_end(form) }}
{% endblock %}