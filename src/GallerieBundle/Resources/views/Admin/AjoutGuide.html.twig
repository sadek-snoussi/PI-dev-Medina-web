{% extends 'admin/base_admin.html.twig' %}

{% block content %}
    {{ form_start(form) }}

        <div class="container">
            <div class="page-wrapper">
                <div class="container-fluid">
                    <div class="row page-titles">
                        <div class="col-md-6 align-self-center">

                            <div class="card-header bg-info" style="font-size: x-large" align="center">
                                <h4 class="m-b-0 text-white">Ajouter un Guide</h4>
                            </div>
                            </br>

                    <div class="form-group">
                        <label for="Nom"><span class="req">* </span> Nom : </label>
                        {{ form_widget(form.nomguide,{'attr':{'class':'form-control' ,'required':'true' }}) }}
                        {{ form_errors(form.nomguide) }}
                    </div>

                        <div class="form-group">
                            <label for="prenom"><span class="req">* </span> Prenom : </label>
                            {{ form_widget(form.prenomguide,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.prenomguide) }}
                        </div>

                        <div class="form-group">
                            <label for="email"><span class="req">* </span> email : </label>
                            {{ form_widget(form.mailguide,{'attr':{'class':'form-control' ,'required':'true' }}) }}
                            {{ form_errors(form.mailguide) }}
                        </div>

                        <div class="form-group">
                            <label for="Telephone"><span class="req">* </span> Telephone : </label>
                            {{ form_widget(form.telguide,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.telguide) }}
                        </div>

                        <div class="form-group">
                            <label for="ville"><span class="req">* </span> Ville : </label>
                            {{ form_widget(form.villeguide,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.villeguide) }}
                        </div>

                        <div class="form-group">
                            <label for="Photo"><span class="req">* </span> Photo de Profil : </label>
                            {{ form_widget(form.imgGuide,{'attr':{'class':'form-control','required':'true'}}) }}
                            {{ form_errors(form.imgGuide) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.Ajouter,{'attr':{'class':'btn btn-outline-success'}}) }}
                        </div>


                </div>

             </div>
         </div>
    </div>
        </div>


    {{ form_end(form) }}
{% endblock %}